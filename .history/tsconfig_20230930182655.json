{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/.js",
    "tests/**/*.ts",
    "src/components/custom/HamburgerMenu/index.tsx"
  ],
  "exclude": ["node_modules", ".vscode"]
}
